<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="80dp"
        android:text="startService"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_end_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:text="endService"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_start_service"
        app:layout_constraintStart_toEndOf="@+id/btn_start_service" />

    <Button
        android:id="@+id/btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="62dp"
        android:text="bindService"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_unbind_service"
        app:layout_constraintEnd_toStartOf="@+id/btn_end_service"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="unBindService"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_end_service"
        app:layout_constraintStart_toStartOf="@+id/btn_end_service"
        app:layout_constraintTop_toBottomOf="@+id/btn_end_service" />

    <Button
        android:id="@+id/btn_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="start_intent_service"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/btn_bind_service"
        app:layout_constraintTop_toBottomOf="@id/btn_bind_service"/>
</androidx.constraintlayout.widget.ConstraintLayout>